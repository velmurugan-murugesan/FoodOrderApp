<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add_black_24dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_add" />

        <ImageView
            android:id="@+id/image_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_remove_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/text_item_count"/>

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>
