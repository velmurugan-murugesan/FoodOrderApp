<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_cart_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cart_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="3"
        android:text="Prawn Bisque"
        android:textColor="#000"
        app:layout_constraintEnd_toStartOf="@+id/text_cart_item_count"
        app:layout_constraintLeft_toRightOf="@id/image_cart_item"
        app:layout_constraintStart_toEndOf="@+id/image_cart_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cart_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 50.00"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cart_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="1x"
        android:textColor="#000"
        app:layout_constraintRight_toLeftOf="@+id/text_cart_subtotal"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>